{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the article object for a specific article by id",
    "params": {
      "article_id": {
        "type": "number",
        "description": "The ID of the article"
      }
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 6
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments for a specific article",
    "params": {
      "article_id": {
        "type": "number",
        "description": "The ID of the article to fetch comments for"
      }
    },
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "author": "weegembump",
          "body": "Great article!",
          "votes": 0,
          "created_at": "2018-05-30T16:59:13.341Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to a specific article",
    "params": {
      "article_id": {
        "type": "number",
        "description": "The ID of the article to post the comment to"
      }
    },
    "body": {
      "username": {
        "type": "string",
        "description": "The username of the user posting the comment"
      },
      "body": {
        "type": "string",
        "description": "The content of the comment"
      }
    },
    "exampleResponse": {
      "comment": {
        "comment_id": 7,
        "author": "weegembump",
        "body": "I agree with this!",
        "votes": 0,
        "created_at": "2018-05-30T17:59:13.341Z"
      }
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote count for a specific article",
    "params": {
      "article_id": {
        "type": "number",
        "description": "The ID of the article to update"
      }
    },
    "body": {
      "inc_votes": {
        "type": "number",
        "description": "The number by which to increase or decrease the votes"
      }
    },
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 5,
        "comment_count": 6
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by its ID",
    "params": {
      "comment_id": {
        "type": "number",
        "description": "The ID of the comment to delete"
      }
    },
    "exampleResponse": {
      "message": "Comment deleted"
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "weegembump",
          "avatar_url": "http://example.com/avatar.jpg"
        }
      ]
    }
  }
}